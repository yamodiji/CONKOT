<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Core permissions for app drawer functionality -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- System overlay permissions -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />
    
    <!-- Access installed packages -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    
    <!-- Launcher permissions -->
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />
    
    <!-- Storage permissions for Android 15+ -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    
    <!-- Internet for updates (optional) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.CONKOT"
        android:hardwareAccelerated="true"
        android:largeHeap="false"
        android:requestLegacyExternalStorage="false"
        tools:targetApi="35">

        <!-- Main Activity (App Drawer) -->
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.CONKOT.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            
            <!-- Default launcher intent -->
            <intent-filter android:priority="1">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Home screen launcher (optional) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Permission request activity for Android 11+ -->
        <activity
            android:name=".ui.activities.PermissionActivity"
            android:exported="false"
            android:theme="@style/Theme.CONKOT.NoActionBar" />

        <!-- File provider for sharing app info -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

    <!-- Enhanced queries for app discovery - Android 11+ compatibility -->
    <queries>
        <!-- Main launcher apps -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
        
        <!-- All app categories for comprehensive discovery -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
        </intent>
        
        <!-- System apps and services -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="https" />
        </intent>
        
        <!-- Package installer for app management -->
        <intent>
            <action android:name="android.intent.action.INSTALL_PACKAGE" />
            <data android:scheme="package" />
        </intent>
        
        <!-- Settings and system apps -->
        <intent>
            <action android:name="android.settings.APPLICATION_DETAILS_SETTINGS" />
            <data android:scheme="package" />
        </intent>
        
        <!-- Share functionality -->
        <intent>
            <action android:name="android.intent.action.SEND" />
            <data android:mimeType="*/*" />
        </intent>
        
        <!-- Web browsers -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="http" />
        </intent>
        
        <!-- File management -->
        <intent>
            <action android:name="android.intent.action.GET_CONTENT" />
            <data android:mimeType="*/*" />
        </intent>
        
        <!-- Camera apps -->
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
        
        <!-- Email apps -->
        <intent>
            <action android:name="android.intent.action.SENDTO" />
            <data android:scheme="mailto" />
        </intent>
        
        <!-- Phone apps -->
        <intent>
            <action android:name="android.intent.action.CALL" />
            <data android:scheme="tel" />
        </intent>
        
        <!-- Common package names for system apps -->
        <package android:name="com.android.settings" />
        <package android:name="com.android.launcher" />
        <package android:name="com.android.launcher3" />
        <package android:name="com.google.android.apps.nexuslauncher" />
        <package android:name="com.sec.android.app.launcher" />
        <package android:name="com.miui.home" />
        <package android:name="com.oneplus.launcher" />
        <package android:name="com.huawei.android.launcher" />
        <package android:name="com.oppo.launcher" />
        <package android:name="com.vivo.launcher" />
        <package android:name="com.android.vending" />
        <package android:name="com.google.android.gms" />
        <package android:name="com.android.chrome" />
        <package android:name="com.google.android.googlequicksearchbox" />
        <package android:name="com.android.contacts" />
        <package android:name="com.android.dialer" />
        <package android:name="com.android.mms" />
        <package android:name="com.android.camera2" />
        <package android:name="com.google.android.apps.photos" />
        <package android:name="com.android.gallery3d" />
        <package android:name="com.spotify.music" />
        <package android:name="com.whatsapp" />
        <package android:name="com.facebook.katana" />
        <package android:name="com.instagram.android" />
        <package android:name="com.twitter.android" />
        <package android:name="com.netflix.mediaclient" />
        <package android:name="com.amazon.mShop.android.shopping" />
        <package android:name="com.paypal.android.p2pmobile" />
        <package android:name="com.google.android.apps.maps" />
        <package android:name="com.uber.app" />
        <package android:name="com.microsoft.office.outlook" />
        <package android:name="com.google.android.gm" />
    </queries>

</manifest> 