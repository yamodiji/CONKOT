<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Core permissions for app drawer functionality -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
    <!-- System overlay permissions -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />
    
    <!-- Access installed packages -->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    
    <!-- Launcher permissions -->
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS" />
    
    <!-- Storage permissions for Android 15+ -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    
    <!-- Internet for updates (optional) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.CONKOT"
        android:hardwareAccelerated="true"
        android:largeHeap="false"
        android:requestLegacyExternalStorage="false"
        tools:targetApi="35">

        <!-- Main Activity (App Drawer) -->
        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/Theme.CONKOT.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            
            <!-- Default launcher intent -->
            <intent-filter android:priority="1">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Home screen launcher (optional) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Permission request activity for Android 11+ -->
        <activity
            android:name=".ui.activities.PermissionActivity"
            android:exported="false"
            android:theme="@style/Theme.CONKOT.NoActionBar" />

        <!-- File provider for sharing app info -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

    <!-- Android 15 Compatibility: Enhanced permission declarations -->
    <!-- QUERY_ALL_PACKAGES permission - restricted on Android 15 for sideloaded apps -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" 
        tools:targetApi="30" />
    
    <!-- Essential permissions that work on Android 15 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" 
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    
    <!-- Android 15: Alternative to MANAGE_EXTERNAL_STORAGE for limited scope -->
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" 
        tools:targetApi="30" />
    
    <!-- System alert window - restricted on Android 15 for sideloaded apps -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Android 15 Workaround: Comprehensive intent queries for app discovery -->
    <queries>
        <!-- Main launcher intent - this works even with restricted permissions -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
        
        <!-- Home screen launchers -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.HOME" />
        </intent>
        
        <!-- App info intent -->
        <intent>
            <action android:name="android.settings.APPLICATION_DETAILS_SETTINGS" />
        </intent>
        
        <!-- Android 15: Essential app categories that work without QUERY_ALL_PACKAGES -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="http" />
        </intent>
        
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="https" />
        </intent>
        
        <!-- Camera apps -->
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
        
        <!-- Messaging apps -->
        <intent>
            <action android:name="android.intent.action.SEND" />
            <data android:mimeType="text/plain" />
        </intent>
        
        <!-- Phone apps -->
        <intent>
            <action android:name="android.intent.action.CALL" />
            <data android:scheme="tel" />
        </intent>
        
        <!-- Settings apps -->
        <intent>
            <action android:name="android.settings.SETTINGS" />
        </intent>
        
        <!-- Calculator apps -->
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.APP_CALCULATOR" />
        </intent>
        
        <!-- Music apps -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:mimeType="audio/*" />
        </intent>
        
        <!-- Video apps -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:mimeType="video/*" />
        </intent>
        
        <!-- Email apps -->
        <intent>
            <action android:name="android.intent.action.SENDTO" />
            <data android:scheme="mailto" />
        </intent>
        
        <!-- Maps apps -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="geo" />
        </intent>
        
        <!-- File manager apps -->
        <intent>
            <action android:name="android.intent.action.GET_CONTENT" />
            <data android:mimeType="*/*" />
        </intent>
        
        <!-- Android 15: Well-known app packages that work without broad permissions -->
        <package android:name="com.android.chrome" />
        <package android:name="com.google.android.apps.maps" />
        <package android:name="com.whatsapp" />
        <package android:name="com.facebook.katana" />
        <package android:name="com.instagram.android" />
        <package android:name="com.twitter.android" />
        <package android:name="com.spotify.music" />
        <package android:name="com.netflix.mediaclient" />
        <package android:name="com.amazon.mShop.android.shopping" />
        <package android:name="com.paypal.android.p2pmobile" />
        <package android:name="com.uber.app" />
        <package android:name="com.airbnb.android" />
        <package android:name="com.skype.raider" />
        <package android:name="com.viber.voip" />
        <package android:name="com.telegram.messenger" />
        <package android:name="com.snapchat.android" />
        <package android:name="com.pinterest" />
        <package android:name="com.linkedin.android" />
        <package android:name="com.dropbox.android" />
        <package android:name="com.google.android.apps.docs" />
        <package android:name="com.microsoft.office.word" />
        <package android:name="com.adobe.reader" />
        <package android:name="com.android.vending" />
        <package android:name="com.google.android.gm" />
        <package android:name="com.google.android.calendar" />
        <package android:name="com.google.android.contacts" />
        <package android:name="com.android.settings" />
        <package android:name="com.android.calculator2" />
        <package android:name="com.android.camera2" />
        <package android:name="com.android.gallery3d" />
        <package android:name="com.google.android.apps.photos" />
        <package android:name="com.android.music" />
        <package android:name="com.google.android.music" />
        <package android:name="com.android.providers.downloads.ui" />
    </queries>

</manifest> 